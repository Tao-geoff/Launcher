<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:constantSize="true"
    android:dither="true">

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <solid android:color="#d1d2cd" /> 
                </shape>
            </item>
            <item
                android:left="100dp"
                android:top="80dp"
                android:right="100dp"
                android:bottom="80dp">
                <bitmap
                    android:src="@drawable/add_icon"
                    android:gravity="center" />
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <solid android:color="#d1d2cd" /> 
                </shape>
            </item>
            <item
                android:left="100dp"
                android:top="80dp"
                android:right="100dp"
                android:bottom="80dp">
                <bitmap
                    android:src="@drawable/add_icon"
                    android:gravity="center" />
            </item>
        </layer-list>
    </item>
</selector>